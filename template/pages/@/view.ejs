<!doctype html>
<html lang="<%= _.lang.replace('_', '-') %>" dir="ltr">

<head>
  <%- await include('@/head') %>
</head>

<body
  id="page-<%= _.pageName %>"
  class="_<%= _.route.path.replace(/\//g, '_') %>"
  <% if (_.route.resource) { %>
    data-resource="<%= _.route.resource %>"
    data-resource-id="<%= _.state._id %>"
  <% } else if (_.route.collection) { %>
    data-cms-collection="<%= _.route.collection %>"
  <% } %>
>
  <!-- Age Verification Popup -->
  <div id="age-verification-popup" class="age-verification-overlay" style="display: none;">
    <div class="age-verification-modal">
      <div class="age-verification-content">
        <h2>Você tem mais de 18 anos de idade?</h2>
        <div class="age-verification-buttons">
          <button id="age-yes" class="btn btn-primary">Sim</button>
          <button id="age-no" class="btn btn-secondary">Não</button>
        </div>
      </div>
    </div>
  </div>

  <%- await include('@/layout/menu') %>

  

  <main role="main" id="main">
    <%- await include('@/layout/header') %>
    
    <div id="wrapper" class="<%= _.pageName == 'products'  ? 'bg-3_old' : '' %>">
    <%- await include('@/layout/sections') %>
    </div>
    <%- await include('@/layout/footer') %>
  </main>

  <%- await include('@/json') %>
  <%- await include('@/scripts') %>
</body>

</html>
